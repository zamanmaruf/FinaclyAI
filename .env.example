# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/finacly_ai
DATABASE_URL_TEST=postgresql://username:password@localhost:5432/finacly_ai_test

# Stripe Configuration (Required for Stripe integration)
STRIPE_SECRET_KEY=sk_test_... # Get from https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_... # Get from https://dashboard.stripe.com/test/apikeys
STRIPE_WEBHOOK_SECRET=whsec_... # Get from https://dashboard.stripe.com/webhooks

# Plaid Configuration (Required for bank account integration)
PLAID_CLIENT_ID=... # Get from https://dashboard.plaid.com/team/keys
PLAID_SECRET=... # Get from https://dashboard.plaid.com/team/keys
PLAID_ENV=sandbox # Options: sandbox, development, production
PLAID_PRODUCTS=transactions,auth # Comma-separated list of products

# QuickBooks Online Configuration (Required for QBO integration)
QBO_CLIENT_ID=... # Get from https://developer.intuit.com/app/developer/myapps
QBO_CLIENT_SECRET=... # Get from https://developer.intuit.com/app/developer/myapps
QBO_REDIRECT_URI=http://localhost:3000/api/app/quickbooks/callback
INTUIT_ENV=sandbox # Options: sandbox, production

# Application Configuration
NEXTAUTH_SECRET=your-secret-key-here # Generate with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Encryption Key (Required for credential encryption)
ENCRYPTION_KEY=your-32-character-encryption-key # Generate with: openssl rand -hex 16

# Environment
NODE_ENV=development # Options: development, production

# Rate Limiting (Optional)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=info # Options: error, warn, info, debug

# Security
CORS_ORIGIN=http://localhost:3000

# Testing
# For E2E tests, you'll need sandbox/test credentials for all services
# Never use production credentials in tests!
